@model Nop.Plugin.Misc.Omnishop.Models.ConfigurationModel
@{
    Layout = "_ConfigurePlugin";
}

<form asp-controller="OmnishopPluginConfiguration" asp-action="Configure" method="post">
    <div class="cards-group">

        <div class="card card-default">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="ApiUrlBase" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ApiUrlBase" />
                        <span asp-validation-for="ApiUrlBase"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="ApiUser" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ApiUser" />
                        <span asp-validation-for="ApiUser"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="ApiPassword" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ApiPassword" />
                        <span asp-validation-for="ApiPassword"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="DefaultClientId" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="DefaultClientId" />
                        <span asp-validation-for="DefaultClientId"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="EmployeeId" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="EmployeeId" />
                        <span asp-validation-for="EmployeeId"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="ProductIdShipping" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ProductIdShipping" />
                        <span asp-validation-for="ProductIdShipping"></span>
                    </div>
                </div>

                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="OriginCode" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="OriginCode" />
                        <span asp-validation-for="OriginCode"></span>
                    </div>
                </div>

            </div>
        </div>

        <div class="card card-default">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="ForceCanonicalUrl" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ForceCanonicalUrl" />
                        <span asp-validation-for="ForceCanonicalUrl"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card card-default">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-3">
                        <nop-label asp-for="ProductImportApiKey" />
                    </div>
                    <div class="col-md-9">
                        <nop-editor asp-for="ProductImportApiKey" />
                        <span asp-validation-for="ProductImportApiKey"></span>
                    </div>
                </div>
            </div>
        </div>

        <div class="card card-default">
            <div class="card-body">
                <div class="form-group row">
                    <div class="col-md-9 offset-md-3">
                        <button type="submit" name="save" class="btn btn-primary">@T("Admin.Common.Save")</button>
                    </div>
                </div>
            </div>
        </div>

    </div>
</form>