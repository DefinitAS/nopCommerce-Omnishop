@using Nop.Core
@using Nop.Services.Helpers
@using Nop.Web.Framework.UI
@inject IWorkContext workContext
@inject IThemeContext themeContext
@inject IUserAgentHelper userAgentHelper
@{
    var supportRtl = (await workContext.GetWorkingLanguageAsync()).Rtl;
    var themeName = await themeContext.GetWorkingThemeNameAsync();

    //add main CSS file
    if (supportRtl)
    {
        NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/rtl/responsive.css", string.Empty);
        NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/styles.rtl.css", string.Empty);
        NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/rtl/zoomple.css", string.Empty);
        NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/rtl/owl.theme.green.min.css", string.Empty);
        NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/rtl/owl.carousel.css", string.Empty);
        NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/bootstrap.min.rtl.css", string.Empty);
        NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/bootstrap.min.css", string.Empty);
        //font-awsome 5 css
        NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/rtl/all.min.css", string.Empty);
        NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/rtl/animate.css", string.Empty);
        NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/all-fonts.css", string.Empty);
    }
    else
    {
        NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/responsive.css", string.Empty);
        NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/styles.css", string.Empty);
        NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/all-fonts.css", string.Empty);
    }

    NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/zoomple.css", string.Empty);
    NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/owl.theme.green.min.css", string.Empty);
    NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/owl.carousel.css", string.Empty);
    NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/bootstrap.min.css", string.Empty);
    //font-awsome 5 css
    NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/all.min.css", string.Empty);
    NopHtml.AppendCssFileParts($"/Themes/{themeName}/Content/css/animate.css", string.Empty);
    NopHtml.AppendCssFileParts($"https://fonts.googleapis.com/css?family=Barlow:300,400,500,700", string.Empty);
    //<link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Barlow:300,400,500,700">
    //add jQuery UI css file
    NopHtml.AppendCssFileParts("/lib_npm/jquery-ui-dist/jquery-ui.min.css", string.Empty);
}